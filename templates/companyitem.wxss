.companyitem {
  margin-top: 20rpx;
  width: 670rpx;
  height: 200rpx;
  background-color: #f6f6f6;
  border-radius: 14rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.detail-logo {
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
  margin-left: 28rpx;
  background-color: #e5e5e5;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.detail-logo image {
  width: 150rpx;
  height: 150rpx;
}

.detail-content {
  width: 440rpx;
  height: 150rpx;
  margin-left: 30rpx;
  display: flex;
  flex-flow: column;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}

.content-item {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-start;
}

.space-between{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.job {
  width: 210rpx;
  height: 50rpx;
  border: 1rpx solid #e5e5e5;
  box-sizing: border-box;
  border-radius: 5rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
}

.job-name {
  font-size: 26rpx;
}

.job-count {
  font-size: 26rpx;
  color: red;
}

.icon {
  width: 30rpx;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.company-icon{
  width: 22rpx;
  height: 32rpx;
}
.addr-icon {
  width: 27rpx;
  height: 39rpx;
}

.addr {
  width: 320rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}


.addr-text {
  font-size: 24rpx;
  margin-left: 15rpx;
  height: 24rpx;
  line-height: 24rpx;
  color: #a9a9a9;
}

.money {
  font-size: 24rpx;
  margin-top: 5rpx;
  color: #ed7b7b;
  width: 110rpx;
}

.company-name {
  width: 320rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.company-name-text {
  margin-left: 15rpx;
  font-size: 12px;
  color: #ec6941;
}

.company-date {
  font-size: 10px;
  color: #a9a9a9;
  margin-top: 5rpx;
  margin-left: 2rpx;
}

.text-overflow {
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
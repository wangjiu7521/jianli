/* pages/specialty/specialty.wxss */
page{
  font-family: SimHei;
}
.header{
  background-color: #eeeeee;
  border-bottom: 1px solid #d2d2d2;
  height: 150rpx;
  padding: 30rpx;
}
.header-title{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  color: #353535;
  font-size: 45rpx;
  font-family: Microsoft YaHei;
}
.header-contain{
  font-size: 35rpx;
  font-weight: 300;
  color: #aaaaaa;
}
checkbox .wx-checkbox-input{
   
   width: 30rpx;
   height: 30rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: #fcaf17;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   width: 30rpx;
   height: 30rpx;
   line-height: 30rpx;
   text-align: center;
   font-size:30rpx;
   color:#fff;
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
checkbox{
  margin-top: 20rpx;
  position: absolute;
  right: 10rpx;
}
.row{
  display: flex;
  flex: row;
  border-bottom: 1px solid #d2d2d2;
  margin-left: 30rpx;
  padding: 20rpx;
  font-size: 35rpx;
   font-weight: 500;
  color: #353535;
}
.row-title{
  display: inline-block;
  margin-top: 25rpx;
}
.submitBtn{
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  width: 100%;
  height: 15%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

}
.btn{
  width: 650rpx;
  height: 70rpx;
  color: white;
  font-size: 14px;
  background-color: #fcaf17;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.ding{
 margin-bottom: 15%;
}
.item{
  margin-bottom: 100rpx;
}
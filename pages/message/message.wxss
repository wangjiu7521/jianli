
.container{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  font-family: "幼圆";
}

.message{
  width: 670rpx;
  min-height: 40rpx;
  margin-bottom: 10rpx;
  border-radius: 15rpx;
  background-color: #f7f7f7;
}
.message-title{
  width: 100%;
  height: 40rpx;
  background-color: #faf9f9;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center; 
}

.message-title-text{
  width: 430rpx;
  margin-left: 15rpx;
  font-size: 22rpx;
  color: #727272;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
}
.message-title-time{
  width: 170rpx;
  font-size: 18rpx;
  color: #a9a9a9;
}
.message-detail-icon{
  width: 16rpx;
  height: 10rpx;
  margin-right: 15rpx;
}
.message-content{
  width: 100%;
  min-height: 75rpx;
  margin-bottom: 10rpx;
  border-radius: 15rpx;
  background-color: #f7f7f7;
  display: flex;
  flex-wrap: wrap;
  align-items: center; 
}
.message-content-text{
  color: #727272;
  font-size: 22rpx;
  line-height: 50rpx;
  margin-left: 15rpx;
  width: -webkit-calc(100% - 30rpx);
}
.bottom{
  width: 100%;
  height: 40rpx;
}
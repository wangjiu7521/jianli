.main{
  width: 92%;
  display: flex;
  flex: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.center{
  display: flex;
  flex: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.lf{float: left;}
.rt{float: right;}
.clear{clear: both;}

.news_title{
  width: 100%;
  font-weight: bold;
  font-size: 50rpx;
  color: #101010;

  line-height: 60rpx;
  overflow: hidden;
}
.news_info{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 27rpx;
  color: #BCC0C7;
}
.news_info image{
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 20rpx;
}
.news_content{
  width: 100%;
  line-height: 60rpx;
  font-size: 35rpx;
}


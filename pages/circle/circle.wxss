.container-circle{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  font-family: "幼圆";
}

.pingfen{
  width: 680rpx;
  height: 380rpx;
  background-color: #e5c6ef;
  border-radius: 15rpx;
  display: flex;
  flex-wrap: nowrap;
}
.pingfen-num{
  width: 530rpx;
  height: 100%;
  margin-left: 75rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.pingfen-num-text{
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
 font-size: 30px;
 color: #ffe400;
}
.fenxiang{
  width: 60rpx;
  height: 100%;
}
/* 分享按钮 */
button[plain]{
  margin-top: 45rpx;
  width: 60rpx;
  height: 70rpx;
  border: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0;
}
.fenxiang-icon{
  width: 60rpx;
  height: 70rpx;
}
.pingjia{
  margin-top: 30rpx;
  width: 650rpx;
  height: 60rpx;
  background-color: #f2fcf7;
  border-radius: 13rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.pingjia-text{
  color: #d2cecc;
  font-size:  15px;
}

.item{
  width: 650rpx;
  height: 100rpx;
  border-radius: 15rpx;
  margin-top: 25rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.color1{
  background-color: #f7a288;
}
.color2{
  background-color: #fdc75c;
}
.color3{
  background-color: #cc8edf;
}
.color4{
  background-color: #94e4b9;
}

.item-icon{
  margin-left: 30rpx;
  width: 100rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}

.item-icon-per{
  width: 55rpx;
  height: 55rpx;
}
.item-icon-zhi{
  width: 80rpx;
  height: 55rpx;
}
.item-text{
  color: white;
  font-size: 15px;
}
.item-text-last{
  width: 450rpx;
  color: white;
  font-size: 23rpx;
  line-height: 40rpx;
}
.last-item{
  margin-bottom: 50rpx;
}


.please{
  background-color: #d2d2d2;
    letter-spacing: 4rpx;
    line-height: 50rpx;
    height: 250rpx;
    margin-bottom: 15rpx;
}
.p{
  display: inline-block;
  font-size: 32rpx;

}
.pp{
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 30rpx;
}
button{
  background-color: #fcaf17;
}


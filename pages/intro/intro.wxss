page{
  font-family: SimHei;
}
.header{
  background-color: #eeeeee;
  border-bottom: 1px solid #d2d2d2;
  height: 200rpx;
  padding: 30rpx;
}
.header-title{
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  color: #353535;
  font-size: 45rpx;
  font-family: Microsoft YaHei;
}
.header-contain{
  font-size: 35rpx;
  font-weight: 300;
  color: #aaaaaa;
}
.text{
  width: 100%;
}
textarea {
  display: block;
  width: 100%;
  background-color: #d2d2d2;
  min-height:300rpx; 
}

.submitBtn{
  position: fixed;
  box-sizing: border-box;
  bottom: 0;
  width: 100%;
  height: 15%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;

}
.btn{
  width: 650rpx;
  height: 70rpx;
  color: white;
  font-size: 14px;
  background-color: #fcaf17;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.ding{
 margin-bottom: 15%;
}
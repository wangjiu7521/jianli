
.container{
  width: 100%;
  font-family: "幼圆";
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.item{
  margin-top: 50rpx;
  width:650rpx;
  height: 200rpx;
  background-color: #faf9f9;
  border-radius: 15rpx;
  display: flex;
  flex-wrap: wrap;
  align-items:center;
}
.item-heigh{
  min-height: 400rpx;
}
.item-content{
  width: 500rpx;
  margin-left: 75rpx;
  min-height: 130rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.item-content2{
  height: 280rpx;
  display: block;
}
.item-content-text{
  width: 100%;
  font-size: 15px;

}
.item-content-lable{
  border-radius: 5rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  min-height: 60rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  background-color: white;
}
.item-content-lable-right{
  height: 61rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  color: #fcaf17;
}
.wx-switch-input{
  width:75rpx !important;height: 46rpx !important;border:0rpx !important;
}
.wx-switch-input::before{width:75rpx !important;height: 46rpx !important;/* background-color:#fcaf17 !important; */border:0rpx !important;}
.wx-switch-input::after{width: 40rpx !important;height: 40rpx !important;margin-top: 3rpx !important;}
.item-edit{
  width: 55rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
}
.item-edit-icon{
  margin-top: 10rpx;
  width: 55rpx;
  height: 55rpx;
}

.detail{
  box-sizing: border-box;
  margin-top: -8rpx;
  width: 500rpx;
  background: #fff8ec;
  display: inline-flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding-top: 8rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
  padding-bottom: 8rpx;
  position: absolute;
  z-index: 90;
}

.detail-item{
  font-size: 24rpx;
  box-sizing: border-box;
  border: 1rpx solid #fcaf17;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  background-color: white;
  height: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.job-item{
  width: 100rpx; 
}
.addr-item{
  width: 430rpx; 
}
.worktime-item{
  width: 100rpx; 
}
.check{
  color: #fcaf17;
  border-radius: 5rpx;
}
 
.nobk{
  opacity:0.1;
}
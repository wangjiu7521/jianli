.container{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  font-family: "幼圆";
}

.item{
  width: 650rpx;
  margin-top: 50rpx;
}
.item-lable{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  box-sizing: border-box;
  background-color: #f8f8f8;
  border-radius: 15rpx;
}
.item-lable-text{
  width: 500rpx;
  margin-left: 60rpx;
  font-size: 30rpx;
}

.item-detail-icon{
  width: 55rpx;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.item-detail-icon image{
  margin-top: 20rpx;
  width: 55rpx;
  height: 55rpx;
}
.item-detail{
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  box-sizing: border-box;
  background-color: #f8f8f8;
  border-radius: 15rpx;
}


/* 特长信息 */

.techang-detail{
  box-sizing: border-box;
  padding-top: 7rpx;
  padding-bottom: 7rpx;
  justify-content: center;
  min-height: 50rpx;
}
.techang-detail-item{
  margin-top: 7rpx;
  margin-bottom: 7rpx;
  width: 535rpx;
  height: 50rpx;
  border:1rpx solid #fcaf17;
  border-radius: 7rpx;
  color: #fcaf17;
  font-size: 24rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}


/* 自我介绍 */

.intro-detail{
  min-height: 300rpx;
}
.intro-lable-text{
  width: 135rpx;
}

.intro-detail-content{
  width: 530rpx;
  margin-left: 60rpx;
  min-height: 260rpx;
  box-sizing: border-box;
  border: 1rpx solid  #fcaf17;
  border-radius: 10rpx;
  background-color: white;

}
.intro-text{
  color: #fcaf17;
  font-size: 24rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:5;
}

/* 入驻 */

.btn{
  width: 650rpx;
  height: 70rpx;
  color: white;
  font-size: 14px;
  background-color: #fcaf17;
  border-radius: 5rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.kongbai{
  width: 100%;
  height: 50rpx;
}
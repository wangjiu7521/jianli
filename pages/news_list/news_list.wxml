<import src="../../templates/newsitem.wxml"/>

<view class='container'>
  <view class='find'>
    <view class='find-content'>
      <view id='1' class='find-btn' hover-class='btn-hover'  bindtap='btnclick'>每日兼职</view>
      <view id='2' class='find-btn' hover-class='btn-hover'  bindtap='btnclick'>全职招聘</view>
      <view id='3' class='find-btn' hover-class='btn-hover'  bindtap='btnclick'>乐在动态</view>
    </view>
  </view>

  <block wx:for="{{news}}" wx:key="{{index}}">
     <template is="newsitem" data="{{item}}"/>
  </block>

  <!-- <view class='kongbai'></view> -->
</view>
<view class="loadmore loading" wx:if="{{ hasMore }}">正在加载...</view>
<view class="loadmore" wx:else>已经到底了</view>
.content {
  display: flex;
  flex: row;
  flex-wrap: wrap;
  justify-content: center;
}

.img-swiper {
  display: flex;
  flex: row;
  flex-wrap: wrap;
  justify-content: center;
  width: 100%;
  height: 210rpx;
}

.company_img {
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  width: 670rpx;
  height: 200rpx;
  background-color: #e1e1e1;
}

.swiper-bg {
  width: 100%;
  position: absolute;
  background-color: #f7f7f7;
  height: 110rpx;
  top: 100rpx;
  z-index: -1;
}

.item {
  width: 670rpx;
  min-height: 40rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.item-lable {
  margin-left: 20rpx;
  font-size: 26rpx;
  width: 120rpx;
}

.item-text {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.icon {
  width: 60rpx;
  height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon image {
  max-width: 30rpx;
  max-height: 30rpx;
}

.content-lable {
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 670rpx;
  height: 45rpx;
}

.recruiterjob {
  width: 100%;
  padding: 10rpx 45rpx 10rpx 45rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: space-around;
}

.jobitem {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: white;
  min-width: 150rpx;
  height: 50rpx;
  border-radius: 5rpx;
  background-color: #fcb221;
}

.welfare {
  min-width: 100rpx;
  height: 38rpx;
  font-size: 23rpx;
  border: 1rpx solid #e1e1e1;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}

.info {
  width: 670rpx;
  min-height: 220rpx;
}

.btn-container {
  height: 120rpx;
  width: 650rpx;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
}

.btn {
  width: 324rpx;
  height: 80rpx;
  box-sizing: border-box;
  background-color: #fb9205;
  display: flex;
  flex: row;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
}

.left-btn {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  background-image: url("https://lezaixy.com/images/weixin/icon/left-btn.jpg");
  background-size: 100% 100%;
}

.right-btn {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-image: url("https://lezaixy.com/images/weixin/icon/right-btn.jpg");
  background-size: 100% 100%;
}
